<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/card_view_elevation"
    android:translationZ="@dimen/card_view_translation"
    app:cardCornerRadius="@dimen/card_view_corner_radius"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view_recipe_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/text_view_recipe_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="@dimen/primary_text_padding"
            android:paddingLeft="@dimen/primary_text_padding"
            android:paddingRight="@dimen/primary_text_padding"
            android:paddingTop="@dimen/primary_text_top_padding"
            android:textSize="@dimen/primary_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_ingredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/action_padding"
                android:layout_marginRight="@dimen/action_horizontal_gap"
                android:paddingLeft="@dimen/action_padding"
                android:paddingRight="@dimen/action_padding"
                android:text="@string/action_ingredients" />

            <Button
                android:id="@+id/button_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/action_padding"
                android:paddingRight="@dimen/action_padding"
                android:text="@string/action_steps" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>